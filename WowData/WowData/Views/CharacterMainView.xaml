<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WowData.Views.CharacterMainView"
             Title="Character Profile">
  <StackLayout
		Padding="20">
    
    <Image x:Name="charThumbnail" Source="{Binding ThumbnailUrl}" WidthRequest="75" HeightRequest="75"/>
    
    <StackLayout
			Orientation="Horizontal">
      <Label
				Text="Name: " />
      <Label
				Text="{Binding ToonName}" />
    </StackLayout>
    <StackLayout
			Orientation="Horizontal">
      <Label
				Text="Level: " />
      <Label
				Text="{Binding Level}" />
    </StackLayout>
    <StackLayout
      Orientation="Horizontal">
      <Label Text="Race: "/>
      <Label Text="{Binding Race.Name}"/>
    </StackLayout>
    <StackLayout
      Orientation="Horizontal">
      <Label Text="Class: "/>
      <Label Text="{Binding ToonClass.Name}"/>
    </StackLayout>
  </StackLayout>
</ContentPage>